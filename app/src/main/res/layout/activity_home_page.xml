<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:maxWidth="450dp">

    <LinearLayout
        android:id="@+id/TopNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        tools:ignore="UselessParent">
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/purple"
            android:src="@drawable/back_arrow"
            android:importantForAccessibility="no">
        </ImageButton>
    </LinearLayout>


    <ScrollView
        android:id="@+id/MainSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopNav"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopNav"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Definitions of Community Harm"
                android:fontFamily="@font/gothambold"
                android:textSize="32sp"
                android:textColor="@color/purple"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gothammedium"
                android:textSize="15sp"
                android:text="You will come across service users who have experienced a range of harms that may or may not sound like a hate incident which may make it  difficult to direct them to the right sources of support.\n\nThere is some confusion about the differences between different forms of hate  and anti-social behaviour/neighbour disputes, although in law and  practice these are clear"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="0.01">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="310dp"
                android:maxHeight="310dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:baselineAligned="false">
                <Button
                    android:id="@+id/bHateRelationships"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:maxWidth="150dp"
                    android:textAllCaps="false"
                    android:text="Hate\nRelationships"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_button">
                </Button>

                <Button
                    android:id="@+id/bMateCrime"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:maxWidth="150dp"
                    android:textAllCaps="false"
                    android:text="Mate\nCrime"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/round_button">
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:baselineAligned="false">
                <Button
                    android:id="@+id/bNeighbourDisputes"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textAllCaps="false"
                    android:text="Neighbour\nDisputes"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_button">
                </Button>

                <Button
                    android:id="@+id/bHateCrime"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textAllCaps="false"
                    android:text="Hate\nCrime"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/round_button">
                </Button>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:baselineAligned="false">
                <Button
                    android:id="@+id/bHateIncident"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textAllCaps="false"
                    android:text="Hate\nIncident"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_button">
                </Button>

                <Button
                    android:id="@+id/bAntiSocialBehaviour"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:textAllCaps="false"
                    android:text="Anti-Social\nBehaviour"
                    android:fontFamily="@font/gothambookt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/round_button">
                </Button>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bordered_textview"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:text="Please click a button above to see it's definition!"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="0.01">

            </TextView>

            <Button
                android:id="@+id/bClose"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:text="Close"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gothammediumt"
                android:background="@drawable/round_y_button"
                android:layout_marginBottom="25dp">
            </Button>

            <Button
                android:id="@+id/bContinue"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Please Continue to the Questionnaire"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="0.01"
                android:layout_marginTop="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:fontFamily="@font/gothammediumt"
                android:background="@drawable/round_y_button"
                android:layout_marginBottom="100dp">
            </Button>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:weightSum="10"
        android:gravity="center"
        android:background="@drawable/pruplebox"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <ImageButton
            android:id="@+id/ibBook"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/book_open_svgrepo_com"
            android:contentDescription="Profile"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </View>

        <ImageButton
            android:id="@+id/ibList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/list_ul_svgrepo_com"
            android:contentDescription="About Us"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </View>


        <ImageButton
            android:id="@+id/ibAboutUs"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:background="@drawable/information_circle_solid_svgrepo_com"
            android:contentDescription="Information"/>

    </LinearLayout>


</RelativeLayout>
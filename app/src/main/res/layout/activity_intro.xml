<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <LinearLayout
        android:id="@+id/TopNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/main"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="16"
        android:layout_below="@+id/TopNav"
        android:layout_above="@+id/BottomNav">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:layout_below="@+id/TopNav"
            app:srcCompat="@drawable/hate_id_logo__1_"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:text="Welcome!"
            android:textAllCaps="false"
            android:textColor="@color/main"
            android:textSize="34sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="337dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="12dp"
            android:text="This app will help practitioners identify different forms of community based harm/violence including hate, and help identify relevant referral pathways"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cont"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:background="@drawable/round_y_button"
            android:text="Continue"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            app:srcCompat="@drawable/durham_university4730" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/connected_voice_cmyk_with_strap_1" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/university_of_northumbria_at_newcastle" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:text="This application has been design to be used by practitioners within the Areas of Northumberland, Newcastle, Gateshead, South and North Tyneside and Sunderland.\nIf you are living within these areas please contact Connected Voice or access your local police Hate Pages."
            android:textAlignment="center"
            android:textSize="11sp"
            android:baselineAligned="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>